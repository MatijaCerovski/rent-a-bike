<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="persistenceUnit">
        <class>com.rent.persistence.model.Bike</class>
        <class>com.rent.persistence.model.Order</class>
        <class>com.rent.persistence.model.Shop</class>
        <class>com.rent.persistence.model.UserInfo</class>
        <class>com.rent.persistence.model.UserRoles</class>
        <class>com.rent.persistence.model.Users</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/rent_a_bike"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
        </properties>
    </persistence-unit>
</persistence>
